VERSION --build-auto-skip 0.8
PROJECT tghanken/playground

FROM ../../../.earthly/base-images/debian+image
WORKDIR /app

# Core Targets - Intended to be called by a user
build:
    RUN echo "Building..."

check:
    RUN echo "Checking..."

deploy:
    WAIT
        BUILD --auto-skip ../private-api+deploy
    END
    RUN echo "Deploying..."

