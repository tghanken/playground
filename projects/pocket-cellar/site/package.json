{
  "name": "pocket-cellar-site",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "sync": "svelte-kit sync",
    "typegen": "wrangler types && mv worker-configuration.d.ts src/",
    "build": "vite build",
    "preview": "wrangler pages dev",
    "check": "pnpm run sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "pnpm run sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest --run",
    "test": "pnpm run test:unit",
    "deploy": "wrangler pages deploy"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241216.0",
    "@sveltejs/adapter-cloudflare": "^4.8.0",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "autoprefixer": "^10.4.20",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.9",
    "typescript": "^5.0.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.4",
    "wrangler": "^3.97.0"
  },
  "dependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15"
  }
}
